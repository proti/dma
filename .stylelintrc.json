{
  "rules": {
    "rule-empty-line-before": [
      "always-multi-line",
      {
        "except": ["first-nested"]
      }
    ],
    "at-rule-empty-line-before": [
      "always",
      {
        "except": [
          "after-same-name",
          "inside-block",
          "blockless-after-same-name-blockless",
          "blockless-after-blockless",
          "first-nested"
        ],
        "severity": "warning"
      }
    ]
  }
}
